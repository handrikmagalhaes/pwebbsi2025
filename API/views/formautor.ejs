<%- include('partials/header.ejs') %>
<!-- CONTEUDO -->
<div class="container fade-in-1">
    <div class="row">
        <%- include('partials/menuLateral.ejs') %>
        <div id="conteudo" class="col-12 col-lg-8 col-xl-9">
            <main>
                <div class="card m-3">
                    <div class="card-header">Cadastro de Autores</div>
                    <% if (autor.id != 0) { %>
                        <form action="/autores/alterar/<%= autor.id %>" method="post">
                            <input type="hidden" value="<%= autor.id %>" name="id">
                    <% } else { %>
                        <form action="/autores/inserir" method="post">
                    <% } %>
                            <div class="card card-body">
                                <label for="genero" class="form-label">Nome</label>
                                <% if (autor.id != 0) { %>
                                    <input type="text" class="form-control" id="nome" name="nome" value="<%= autor.nome %>">
                                <% } else { %>
                                    <input type="text" class="form-control" id="nome" name="nome">
                                <% } %>
                                <label for="sobrenome" class="form-label">Sobrenome</label>
                                <% if (autor.id != 0) { %>
                                    <input type="text" class="form-control" id="sobrenome" name="sobrenome" value="<%= autor.sobrenome %>">
                                <% } else { %>
                                    <input type="text" class="form-control" id="sobrenome" name="sobrenome">
                                <% } %>
                            </div>
                            <div class="card card-footer">
                                <div class="btn-group col-4">
                                    <button type="submit" class="btn btn-success m-2">Gravar</button>
                                    <a type="button" class="btn btn-danger m-2" href="/autores">Cancelar</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>
<!-- FIM CONTEUDO -->
<%- include('partials/footer.ejs') %>